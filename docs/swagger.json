    "definitions": {
        "app.Response": {
            "description": "API统一响应格式",
            "type": "object",
            "properties": {
                "code": {
                    "description": "状态码",
                    "type": "integer",
                    "example": 200
                },
                "data": {
                    "description": "数据"
                },
                "message": {
                    "description": "消息",
                    "type": "string",
                    "example": "操作成功"
                }
            }
        },
        "dto.AuthResponse": {
            "description": "认证成功的响应数据",
            "type": "object",
            "properties": {
                "token": {
                    "description": "JWT令牌",
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                },
                "user": {
                    "description": "用户信息摘要",
                    "allOf": [
                        {
                            "$ref": "#/definitions/dto.UserSummary"
                        }
                    ]
                }
            }
        },
        "dto.LoginRequest": {
            "description": "用户登录的请求参数",
            "type": "object",
            "required": [
                "password",
                "phone"
            ],
            "properties": {
                "password": {
                    "description": "用户密码",
                    "type": "string",
                    "example": "Password123"
                },
                "phone": {
                    "description": "用户手机号",
                    "type": "string",
                    "example": "13800138000"
                }
            }
        },
        "dto.PasswordChangeRequest": {
            "description": "修改密码的请求参数",
            "type": "object",
            "required": [
                "new_password",
                "old_password"
            ],
            "properties": {
                "new_password": {
                    "description": "新密码",
                    "type": "string",
                    "maxLength": 20,
                    "minLength": 6,
                    "example": "NewPass456"
                },
                "old_password": {
                    "description": "原密码",
                    "type": "string",
                    "maxLength": 20,
                    "minLength": 6,
                    "example": "OldPass123"
                }
            }
        },
        "dto.RegisterRequest": {
            "description": "用户注册的请求参数",
            "type": "object",
            "required": [
                "password",
                "phone",
                "username"
            ],
            "properties": {
                "password": {
                    "description": "用户密码",
                    "type": "string",
                    "maxLength": 20,
                    "minLength": 6,
                    "example": "Password123"
                },
                "phone": {
                    "description": "用户手机号",
                    "type": "string",
                    "example": "13800138000"
                },
                "username": {
                    "description": "用户名称",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        },
        "dto.UserSummary": {
            "description": "用户基本信息，不包含敏感字段",
            "type": "object",
            "properties": {
                "id": {
                    "description": "用户ID",
                    "type": "integer",
                    "example": 1
                },
                "phone": {
                    "description": "用户手机号",
                    "type": "string",
                    "example": "13800138000"
                },
                "user_role": {
                    "description": "用户角色(1:普通用户,9:管理员)",
                    "type": "integer",
                    "example": 1
                },
                "username": {
                    "description": "用户名称",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        },
        "models.User": {
            "description": "用户数据库模型",
            "type": "object",
            "properties": {
                "created_at": {
                    "description": "创建时间",
                    "type": "string"
                },
                "id": {
                    "description": "用户ID",
                    "type": "integer",
                    "example": 1
                },
                "phone": {
                    "description": "手机号码",
                    "type": "string",
                    "example": "13800138000"
                },
                "updated_at": {
                    "description": "更新时间",
                    "type": "string"
                },
                "user_role": {
                    "description": "用户角色",
                    "type": "integer",
                    "example": 1
                },
                "username": {
                    "description": "用户名称",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        }
    }
